<h1>Show all the clients here</h1>

<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Company</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @clients.each do |client| %>
			<tr>
				<td><%= client.first_name %></td>
				<td><%= client.last_name %></td>
				<td><%= client.company %></td>
				<td><%= link_to "Show", client_path(client) %></td>
				<td><%= link_to "Edit", edit_client_path(client) %></td>
				<td><%= link_to "Delete", client_path(client), data: { turbo_method: :delete} %></td>
			</tr>
		<% end %>
	</tbody>
</table>
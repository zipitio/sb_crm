<h1>Client List</h1>
<div class="table-responsive-md">
	<table class="table table-striped table-hover table-bordered">
		<thead>
			<tr class="table-secondary">
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Company</th>
				<th scope="col" colspan="3">Actions</th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			<% @clients.each do |client| %>
				<tr scope="row" class="table-light">
					<td><%= client.first_name %></td>
					<td><%= client.last_name %></td>
					<td><%= client.company %></td>
					<td><%= link_to "Show", client_path(client) %></td>
					<td><%= link_to "Edit", edit_client_path(client) %></td>
					<td><%= link_to "Delete", client_path(client), data: { "turbo_method": :delete, "turbo-confirm": "Are you sure?"} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<p>
	<%= link_to "Create new client", new_client_path, :class => "btn btn-primary" %>
</p>
<h1>Create a new client</h1>

<%= form_with scope: :client, data: { turbo: false }, url: clients_path, local: true do |f| %>

	<p> 
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</p>

	<p>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</p>

	<p>
		<%= f.label :company %>
		<%= f.text_field :company %>
	</p>

	<p> <%= f.submit %> </p>

<% end %>
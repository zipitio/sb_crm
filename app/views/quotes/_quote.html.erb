<div id="<%= dom_id quote %>">
  <p>
    <strong>Type:</strong>
    <%= quote.quote_type %>
    <%= quote.quote_type.humanize %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= number_to_currency(quote.amount, precision: 0) %>
  </p>

  <p>
    <strong>Client id:</strong>
    <%= quote.client_id %>
    <strong>Client Name:</strong>
    <%= quote.client.company %>
  </p>

</div>

<%= link_to "View PDF", quote_pdf_path(quote)%>